/* miniprogram/pages/user/user.wxss */

.user-info{
  height: 150rpx;
  border: 1px #937bf5 solid;
  border-left: none;
  border-right: none;
  display: flex;
  align-items: center;
}
.user-info image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 20rpx;
}
.user-info button{
  margin: 0;
}
.user-list-item{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
  box-sizing: border-box;
  border-bottom: 1px dashed #937bf5;
}
