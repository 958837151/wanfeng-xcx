/* components/search/search.wxss */

.container{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 60rpx;
  z-index: 9999;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.containerFocus{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.search{
  display: flex;
  align-items: center;
  background: #fff;
}
.search-text{
  display: flex;
  align-items: center;
  flex: 1;
  border: 1px solid #937bf5;
  border-radius: 10rpx;
  padding-left: 20rpx;
}
.search-text input{
  flex: 1;
}
.search-history{
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
}
.search-history-item{
  display: flex;
  flex-flow: wrap;
}
.search-history-item text{
  border: 1px solid #937bf5;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  margin: 20rpx;
}
.searchList{
  height: 120rpx;
  line-height: 120rpx;
  border: 1px dashed #937bf5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
}
.searchList view{
  display: flex;
  align-items: center;
}
.searchList image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}